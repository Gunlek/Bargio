@page
@model Bargio.Areas.Admin.Pages.EditDatabase.Utilisateurs.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

<h4>UserData</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <label class="text-danger">@Model.ErrorMessage</label>
            <label class="text-success">@Model.SuccessMessage</label>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserData.Nom" class="control-label"></label>
                <input asp-for="UserData.Nom" class="form-control"/>
